{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "es2015"
    },
    "include": ["src/**/*.ts"]
}